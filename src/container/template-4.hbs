<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">

        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="main_image" class="main_image">
    <div class="main_content">
        <h1 class="main_heading">{{heading}}</h1>
        <p class="main_description">{{description}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}



<div class="featured">
    {{#each featured}}
    <div class="featured_content">
        <img src="{{photo}}" alt="heading_photo" class="heading_photo">
        <h2 class="featured_title">
            {{heading}}
        </h2>
        <p class="heading_info">{{info}}</p>
        <a href="{{linkUrl}}" class="heading_link">{{linkText}} </a>
    </div>
    {{/each}}
</div>



<div class="actions">
    {{#each actions}}
    <div class="actions_content">
        <h3 class="actions_heading">
            {{heading}}
        </h3>
        <a href="{{url}}" class="actions_text">
            {{text}}
        </a>

    </div>
    {{/each}}
</div>




<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title"> {{title}} </span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>