<main class="main">
    {{#with hero}}
    <div class="hero">
        <h1 class="hero_title">
            {{title}}
        </h1>
        <p class="hero_description">
            {{description}}
        </p>
        <div class="btn">
            <a href="{{button.url}}" class="hero_button">{{button.text}} </a>
        </div>
    </div>
    {{/with}}
</main>

<section class="about">
    {{#with about}}
    <div class="about_content">
        <h2 class="about_heading">
            {{heading}}
        </h2>
        <p class="about_info">
            {{info}}
        </p>
    </div>
    {{/with}}
</section>

<section class="articles">
    <div class="our_articles">
        <h2 class="our_title">Our Articles</h2>
        <a href="#" class="our_button">View All</a>
    </div>

    <div class="card">
        {{#each articles}}
        {{> articleCardDark}}

        {{/each}}
    </div>
</section>