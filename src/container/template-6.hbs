<header class="header">
    <div>
        {{> logo}}
    </div>
    <nav class="header_nav">

        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="main_info">
        <h1 class="main_info_title">
            {{title}}
        </h1>
        <p class="main_info_description">
            {{description}}
        </p>
    </div>

    {{/with}}
    {{#with form}}
    <form action="" class="form">
        {{#each inputs}}
        <div class="form_inputs">
            <input type="{{type}}" name="{{name}} id={{id}}" placeholder="{{placeholder}}">
        </div>
        {{/each}}
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}">
            <label for="{{checkbox.name}}"> {{checkbox.label}} </label>
        </div>
        <button class="form_button">
            {{button}}
        </button>
        <div class="border">
            <p class="form_info">
                {{info}}
            </p>
        </div>


    </form>
    {{/with}}
</main>

<section class="updates">
    {{#with updates}}
    <h2 class="updates_title">
        {{title}}
    </h2>
    {{#each list}}
    <div class="updates_list">
        <img src="https://picsum.photos/32/32" alt="goto" class="updates_img">
        <div class="upd_list_user">
            <h3 class="updates_nik">
                @{{nickname}}s
            </h3>
            <p class="updates_description">
                {{description}}
            </p>
        </div>
    </div>
    {{/each}}
    <a href="{{show_all.url}}" class="updates_show_all">{{show_all.text}} </a>
    {{/with}}
</section>

<section class="expirience">
    {{#with expirience}}

    <div class="exp_badge">
        {{badge}}
    </div>
    <h2 class="exp_title">
        {{title}}
    </h2>



    <div class="exp_card">

        {{#each list}}
        <div class="exp_list">
            <h3 class="exp_name">{{name}} </h3>
            <p class="exp_details">
                {{details}}
            </p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title"> {{title}} </span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>